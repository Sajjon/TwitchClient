platform :ios, '9.0'

target 'TwitchClient' do
  use_frameworks!
  pod 'SwiftLint'
  pod 'SwiftyBeaver' # Better logging
  pod 'Swinject' # Dependency Injection
  pod 'Alamofire'
  pod 'ObjectMapper' #JSON parsing
  pod 'AlamofireObjectMapper' # response deserialisation
  pod 'SwiftGen' # Localizable Strings into Enums
  pod 'Nuke' # Fastest image manager: https://github.com/kean/Image-Frameworks-Benchmark
  pod 'RxSwift' # Observables
  pod 'Cartography' # Setup autolayout constraints easily
end
